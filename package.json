{
	"name": "obsidian-wordwise-plugin",
	"version": "1.2.1",
	"private": true,
	"description": "Writing companion for AI content generation.",
	"license": "MIT",
	"author": "ckt1031",
	"main": "main.js",
	"scripts": {
		"build": "bun esbuild.config.ts production",
		"dev": "bun esbuild.config.ts",
		"format": "biome format . --write",
		"lint": "tsc --noEmit --skipLibCheck && biome check .",
		"lint:fix": "tsc --noEmit --skipLibCheck && biome check --write .",
		"test": "vitest run",
		"version": "bun version-bump.ts && biome format manifest.json versions.json --write && git add manifest.json versions.json",
		"prepare": "husky || true",
		"lint-staged": "lint-staged"
	},
	"dependencies": {
		"@types/mustache": "^4.2.6",
		"@xsai-ext/providers-cloud": "^0.2.2",
		"@xsai/generate-text": "^0.2.2",
		"@xsai/stream-text": "^0.2.2",
		"@xsai/utils-stream": "^0.2.2",
		"dayjs": "1.11.13",
		"front-matter": "^4.0.2",
		"fuse.js": "7.1.0",
		"localforage": "1.10.0",
		"mustache": "^4.2.0",
		"nanoid": "5.1.5",
		"openai": "5.0.1",
		"rambda": "10.2.0",
		"rambdax": "^11.3.1",
		"slugify": "1.6.6",
		"snakecase-keys": "8.0.1",
		"valibot": "1.1.0"
	},
	"devDependencies": {
		"@biomejs/biome": "beta",
		"@types/node": "22.15.28",
		"builtin-modules": "5.0.0",
		"esbuild": "0.25.5",
		"husky": "9.1.7",
		"lint-staged": "16.1.0",
		"obsidian": "1.8.7",
		"tslib": "2.8.1",
		"typescript": "5.8.3",
		"vitest": "3.1.4"
	},
	"lint-staged": {
		"*.{js,ts,mjs,cjs}": [
			"biome check && tsc"
		]
	},
	"trustedDependencies": [
		"@biomejs/biome"
	]
}
