{
	"name": "obsidian-wordwise-plugin",
	"version": "1.1.1",
	"private": true,
	"description": "Writing companion for AI content generation.",
	"license": "MIT",
	"author": "ckt1031",
	"main": "main.js",
	"scripts": {
		"build": "bun esbuild.config.ts production",
		"dev": "bun esbuild.config.ts",
		"format": "biome format . --write",
		"lint": "tsc --noEmit --skipLibCheck && biome check .",
		"lint:fix": "tsc --noEmit --skipLibCheck && biome check --write .",
		"test": "vitest run",
		"version": "bun version-bump.ts && biome format manifest.json versions.json --write && git add manifest.json versions.json",
		"prepare": "husky || true",
		"lint-staged": "lint-staged"
	},
	"dependencies": {
		"@types/mustache": "^4.2.5",
		"dayjs": "1.11.13",
		"front-matter": "^4.0.2",
		"fuse.js": "7.1.0",
		"localforage": "1.10.0",
		"mustache": "^4.2.0",
		"nanoid": "5.1.5",
		"openai": "4.91.1",
		"rambda": "9.4.2",
		"slugify": "1.6.6",
		"snakecase-keys": "8.0.1",
		"valibot": "1.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/node": "22.14.0",
		"builtin-modules": "5.0.0",
		"esbuild": "0.25.2",
		"husky": "9.1.7",
		"lint-staged": "15.5.0",
		"obsidian": "1.8.7",
		"tslib": "2.8.1",
		"typescript": "5.8.3",
		"vitest": "3.1.1"
	},
	"lint-staged": {
		"*.{js,ts,mjs,cjs}": ["biome check && tsc"]
	},
	"trustedDependencies": ["@biomejs/biome"]
}
