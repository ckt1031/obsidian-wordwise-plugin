{
	"name": "obsidian-wordwise-plugin",
	"version": "1.3.0",
	"private": true,
	"description": "Writing companion for AI content generation.",
	"license": "MIT",
	"author": "ckt1031",
	"main": "main.js",
	"scripts": {
		"build": "bun esbuild.config.ts production",
		"dev": "bun esbuild.config.ts",
		"format": "biome format . --write",
		"lint": "tsc --noEmit --skipLibCheck && biome check .",
		"lint:fix": "tsc --noEmit --skipLibCheck && biome check --write .",
		"test": "vitest run",
		"version": "bun scripts/version-bump.ts && biome format manifest.json versions.json --write && git add manifest.json versions.json",
		"prepare": "husky || true",
		"lint-staged": "lint-staged"
	},
	"dependencies": {
		"@types/mustache": "^4.2.6",
		"front-matter": "^4.0.2",
		"fuse.js": "7.1.0",
		"localforage": "1.10.0",
		"mustache": "^4.2.0",
		"nanoid": "5.1.6",
		"openai": "^6.15.0",
		"rambda": "11.0.1",
		"rambdax": "^11.3.1",
		"slugify": "1.6.6",
		"valibot": "1.2.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"@types/node": "25.0.3",
		"builtin-modules": "5.0.0",
		"esbuild": "0.27.2",
		"husky": "9.1.7",
		"lint-staged": "16.2.7",
		"obsidian": "1.11.0",
		"tslib": "2.8.1",
		"typescript": "5.9.3",
		"vitest": "4.0.16"
	},
	"lint-staged": {
		"*.{js,ts,mjs,cjs}": [
			"biome check && tsc"
		]
	},
	"trustedDependencies": [
		"@biomejs/biome"
	]
}
