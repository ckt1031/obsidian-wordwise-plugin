{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"importHelpers": true,
		"inlineSourceMap": true,
		"inlineSources": true,
		"isolatedModules": true,
		"lib": ["DOM", "es2021"],
		"module": "ESNext",
		"moduleResolution": "node",
		"noEmit": true,
		"noImplicitAny": true,
		"resolveJsonModule": true,
		"strictNullChecks": true,
		"target": "ES6"
	},
	"include": ["**/*.ts", "src/index.d.ts", "*.mjs"]
}
